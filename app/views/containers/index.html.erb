<h1>Listing containers</h1>

<table>
  <thead>
    <tr>
      <th>Container</th>
      <th>Name</th>
      <th>Subdomain</th>
      <th>Port</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @containers.each do |container| %>
      <tr>
        <td><%= container.container_id %></td>
        <td><%= container.name %></td>
        <td><%= container.subdomain %></td>
        <td><%= container.port %></td>
        <td><%= container.user %></td>
        <td><%= link_to 'Show', container %></td>
        <td><%= link_to 'Edit', edit_container_path(container) %></td>
        <td><%= link_to 'Destroy', container, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

